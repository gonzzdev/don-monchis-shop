---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Card from '../components/Card.astro';
import ActionCall from '../components/ActionCall.astro'
import Story from '../components/Story.astro'
import Social from '../components/Social.astro'
---

<Layout 
title="Don Monchis | 🍗 El mejor pollo & papas de Bahía de Banderas y Puerto Vallarta."
>
	<main class="px-4">
		<SectionContainer class="pt-16">
			<img
			class="w-[400px] m-auto mb-8" 
			src="/images/logo-3.webp" alt="Es puro sabor del rancho.">

			<img
			class="w-full m-auto mb-8" 
			src="/images/rancho.webp" alt="Es puro sabor del rancho.">

		</SectionContainer>

		<SectionContainer>
			<ActionCall />
		</SectionContainer>

		<SectionContainer id="menu" class="mb-20">
			<h3 class="text-white text-4xl font-black text-center mb-4">
				Menú
			</h3>

			<img
			class="w-full m-auto mb-20" 
			src="/images/menu.svg" alt="Es puro sabor del rancho.">

			<h3 class="text-white text-2xl font-black text-center mb-4">
				Nuestros Favoritos
			</h3>
			<Card />
		</SectionContainer>

		<SectionContainer id="historia">
			<Story />
		</SectionContainer>

		<SectionContainer id="social">
			<Social />
		</SectionContainer>

		<SectionContainer id="merch">
			
			<h3 class="text-white text-lg font-semibold text-center -mb-8">
				Pregunta como puedes ganar una playera gratis 🤠
			</h3>

			<img src="/images/shirt-mockup.webp" alt="Mockup de camiseta frente y espalda.">

		</SectionContainer>
	</main>
</Layout>
